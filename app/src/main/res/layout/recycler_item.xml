<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewFavoriteWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:textColor="@color/cardview_dark_background"
        android:text="Word" />

    <TextView
        android:id="@+id/textViewFavoriteType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFavoriteWord"
        android:text="MD5" />

    <ImageButton
        android:id="@+id/imageButtonFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imageButtonFavoriteCopy"
        android:layout_toStartOf="@id/imageButtonFavoriteCopy"
        android:background="?android:selectableItemBackground"
        android:padding="4dp"
        app:srcCompat="@drawable/ic_favorite_black_24dp" />

    <ImageButton
        android:id="@+id/imageButtonFavoriteCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imageButtonFavoriteShare"
        android:layout_toStartOf="@id/imageButtonFavoriteShare"
        android:background="?android:selectableItemBackground"
        android:padding="4dp"
        app:srcCompat="@drawable/ic_content_copy_black_24dp" />

    <ImageButton
        android:id="@+id/imageButtonFavoriteShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="?android:selectableItemBackground"
        android:padding="4dp"
        app:srcCompat="@drawable/ic_share_black_24dp" />

</RelativeLayout>