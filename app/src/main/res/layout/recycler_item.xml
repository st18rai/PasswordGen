<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/textViewFavoriteWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/imageButtonFavoriteCopy"
            android:layout_toStartOf="@+id/imageButtonFavoriteCopy"
            android:textColor="@color/cardview_dark_background"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewFavoriteType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewFavoriteWord" />

        <ImageButton
            android:id="@+id/imageButtonFavoriteCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imageButtonFavoriteShare"
            android:layout_toStartOf="@id/imageButtonFavoriteShare"
            android:background="?android:selectableItemBackground"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_content_copy_black_24dp" />

        <ImageButton
            android:id="@+id/imageButtonFavoriteShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="?android:selectableItemBackground"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_share_black_24dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>